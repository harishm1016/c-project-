pipeline {
    agent any 
    parameters {
    string defaultValue: 'master', name: 'branch', trim: true
    }
    stages {
        stage('STAGE-1') {
            when {
                branch 'main'
            }
            steps{
                sh "echo STAGE-2 executes if branch is master"
            }
        }

        stage('STAGE-2'){
            when {
                branch 'master'
            }
            steps{
                sh "echo STAGE-2 executes if branch is master"
            }
        }
    }
}
